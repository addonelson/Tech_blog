<div class="bg-success container-sm card text-center">
    <div class="card-body">
        {{#each posts as |post|}}
        <a href="" id="comment-box">
            <h5 class="text-white card-title">{{title}}</h5>
        </a>
        <p class="card-text">{{contents}}</p>
        <h4>Comments by users:</h4>
        <p class=" card-text savedComment">{{comment.comment_contents}}</p> 
        <div class="comments" id="comment-{{id}}"></div>
        <a data-id={{id}} class="commentPost btn btn-primary">Add Comment</a><br>

        <div class="hide" id={{id}}><br>Comments: <textarea name="" id="text-{{id}}" cols="30"
                rows="3"></textarea><br><button class="savebtn" data-id={{id}}>Save Comment</button> </div>
        <div class="bg-secondary text-white card-footer">
            Made by: {{user.username}} on {{format_date createdAt}}.
        </div>

        <div class="collapse" for="_1">{}
            <textarea> </textarea>
        </div>
        {{/each}}

    </div>
</div>
